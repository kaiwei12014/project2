(function(b,a,c){b(function(e){e(".sentenceAudioIcon, .contentAudioIcon, .contentTopAudioIcon, .contentBodyAudioIcon, .chromeExtensionAudioIcon, .adobeExtensionAudioIcon, .smpAudioIcon").live("click",function(){e(this).children("audio")[0].play()});e("#audioDownloadPlayUrl").live("click",function(){a.open(this.href,"_blank","location=yes, height=281, width=416, scrollbars=no, status=no");return false});e(".nrCntSgAdo").live("click",function(){e(this).children("audio")[0].play()});e("#contHyBtnTAE, #contHyBtnTAPlE, #contHyBtnTADlE, #contHyBtnTAC, #contHyBtnTAPlC, #contHyBtnTADlC, #contHyBtnTAKr, #contHyBtnTAPlKr, #contHyBtnTADlKr").live("click",function(){var q=e(this).find(':hidden[name="languagePairFin"]').val();var n=e(this).find(':hidden[name="audioTextAreaId"]').val();var j=e("#"+n).val();var m=d(j,q);if(m){alert(m);return}var i=e(this).find(':hidden[name="maxLimit"]').val();if(g(j,i)){if(q==="EJ"||q==="JE"){alert(i+"文字を超えているため再生できません。");return}j=j.substring(0,i)}var p="";var l=e(this).find("audio source");var k=e(this).find(':hidden[name="audioDownloadUrl"]');if(l.length){p=l.attr("src")}else{if(k.length){p=k.val()}}var o=f(p,j,q,n);if(o.length>0){if(l.length){l.attr("src",o+"&ext=mp3");e(this).children("audio")[0].load();e(this).children("audio")[0].play()}else{if(k.length){var h=navigator.userAgent.toLowerCase();if(h.indexOf("safari")!=-1&&h.indexOf("chrome")==-1){o+="&ext=mp3"}a.open(o,"_blank","location=yes, height=281, width=416, scrollbars=no, status=no");return false}}}});function g(i,h){return i&&h&&i.length>h}function d(i,h){var j=i;j=j.replace(/^([ 　\t\r\n]+)?(.+?)([ 　\t\r\n]+)?$/g,"$2");j=j.replace(/\r\n/g,"");j=j.replace(/\n/g,"");if(j.length==0){if(h==="CJ"||h==="JC"){return"中国語(簡体字、繁体字)の原文を入力してください"}else{if(h==="KJ"||h==="JK"){return"韓国語(ハングル)の原文を入力してください"}else{if(h==="EJ"||h==="JE"){return"英語の原文を入力してください"}}}}else{if((h==="CJ"||h==="JC")&&!j.match(/[a-zａ-ｚ0-9０-９\u4E00-\u9FFF]/i)){return"音声再生機能は、英数字、漢字(簡体字、繁体字)のみに対応しています"}else{if((h==="KJ"||h==="JK")&&!j.match(/[a-zａ-ｚ0-9０-９\uAC00-\uD7AF]/i)){return"音声再生機能は、英数字、韓国語(ハングル)のみに対応しています"}else{if((h==="EJ"||h==="JE")&&!j.match(/[a-zａ-ｚ0-9０-９]/i)){return"音声再生機能は、英数字のみに対応しています"}}}}return""}function f(k,l,h,m){var i=k.split("?")[0];if(i.length>0){var n=e("#sndspd option:selected").val();var j=e("#"+m)[0];if(!j.clickCount){j.clickCount=0}j.clickCount++;i+="?query="+CommonUtils.encodeURL(l);i+=!n?"":"&speed="+n;i+="&ar="+e("#traSpA").val();i+="&c="+j.clickCount;i+="&lp="+h;return i}return""}})})(jQuery,window);